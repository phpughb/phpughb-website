{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login_css') }}
{% endblock %}

{% block body %}
    <form method="post" class="form-signin">
        <div class="text-center mb-4">
            <img class="mb-4" src="/asset/img/logo.png" alt="" width="200">
            <h1 class="h3 mb-3 font-weight-normal">PHPUGHB Admin</h1>
        </div>
        <div class="form-label-group">
            <input type="email" id="inputEmail" class="form-control" placeholder="Email Adresse" name="username"
                   value="{{ last_username ?? '' }}"
                   required autofocus>
            <label for="inputEmail">Email Adresse</label>
        </div>

        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" placeholder="Passwort" name="password"
                   required>
            <label for="inputPassword">Passwort</label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" id="loginBtn" type="submit">Login</button>
        {% if error_message %}
            <hr/>
            <div class="alert alert-danger">
                {{ error_message.messageKey|trans }}
            </div>
        {% endif %}
    </form>
{% endblock %}