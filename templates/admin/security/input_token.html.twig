{% extends 'base.html.twig' %}

{% block title %}
    Passwort erstellen - {{ parent() }}
{% endblock %}

{% block body %}
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -ms-flex-align: center;
            -ms-flex-pack: center;
            -webkit-box-align: center;
            align-items: center;
            -webkit-box-pack: center;
            justify-content: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .container {
            width: 100%;
            max-width: 420px;
            padding: 15px;
            margin: 0 auto;
        }
    </style>
    <div class="container">
        <h1>Passwort festlegen</h1>
        <p>E-Mail: {{ email }}</p>
        {{ form_start(register_form_view) }}
        {{ form_rest(register_form_view) }}
        <button class="btn btn-primary" type="submit">Speichern</button>
        {{ form_end(register_form_view) }}
    </div>
{% endblock %}


