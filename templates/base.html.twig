<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}PHP Usergroup Bremen{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app_css') }}
    {% endblock %}
</head>
<body>
{% block body %}
    {% include 'includes/_nav.html.twig' %}

    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">
                    {% block heading %}{% endblock %}
                </h1>

                {% block content %}{% endblock %}

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                {{ include('includes/_twitter.html.twig') }}
            </div>

        </div>

    </div>

    {% include 'includes/_footer.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app_js') }}
{% endblock %}
</body>
</html>
